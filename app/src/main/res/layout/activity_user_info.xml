<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ttrm.ttconnection.activity.UserInfoActivity">
    <include layout="@layout/toolbar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/persion_pic">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="钻石："/>
                    <TextView
                        android:id="@+id/info_tv_diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginRight="3dp"
                        android:text="--"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/vector_drawable_zuanshi"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/user_header"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/info_tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/info_tv_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="10sp"
                            android:text="该手机号为您的爆粉手机号，需要与您微信绑定的手机号一致，被动加粉，爆机才有效。"
                            android:lines="2"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_F0F0F0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/info_ll_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vector_drawable_adduser"/>
                    <TextView
                        android:id="@+id/activity_user_info_bd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="被动加粉"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_F0F0F0"/>

                <LinearLayout
                    android:id="@+id/info_ll_bj"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vector_drawable_refresh"/>
                    <TextView
                        android:id="@+id/activity_user_info_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爆机"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white_F0F0F0"/>
            <LinearLayout
                android:id="@+id/info_ll_diamond"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="6dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/vector_drawable_info_zs"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_3"
                    android:text="钻石"/>
                <TextView
                    android:id="@+id/info_tv_getdiamond"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="如何获取钻石"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/btn_right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vector_drawable_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_F0F0F0"/>
            <LinearLayout
                android:id="@+id/info_ll_change"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="6dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/vector_drawable_info_change"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray_3"
                    android:text="兑换码"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/btn_right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vector_drawable_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_F0F0F0"/>
            <ImageView
                android:id="@+id/info_iv_vip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:id="@+id/info_ll_sm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="6dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/vector_drawable_info_sm"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/gray_3"
                    android:text="新手教学"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/btn_right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vector_drawable_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white_F0F0F0"/>
            <LinearLayout
                android:id="@+id/info_ll_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="6dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/vector_drawable_info_name"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/gray_3"
                    android:text="我的昵称"/>
                <TextView
                    android:id="@+id/info_tv_bmdl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/btn_right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vector_drawable_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white_F0F0F0"/>
            <LinearLayout
                android:id="@+id/info_ll_version"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="6dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/vector_drawable_info_refresh"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/imageView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray_3"
                    android:text="版本更新"/>
                <TextView
                    android:id="@+id/info_tv_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/btn_right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vector_drawable_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_F0F0F0"/>
            <LinearLayout
                android:id="@+id/info_ll_custom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="6dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/vector_drawable_info_kf"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/gray_3"
                    android:text="咨询客服"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/btn_right"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vector_drawable_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white_F0F0F0"/>
            <Button
                android:id="@+id/info_btn_loginout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:background="@color/white"
                android:elevation="5dp"
                android:gravity="center"
                android:textColor="@color/gray_3"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white_F0F0F0"/>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/toolbar_layout"/>


</LinearLayout>
