<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ttrm.ttconnection.activity.BaoJiActivity">
    <include layout="@layout/toolbar_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/baoji_reward"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@color/gray_3"
                    android:text="选择爆机人数"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_F0F0F0"/>
                <com.ttrm.ttconnection.view.ListViewForScrollview
                    android:id="@+id/baoji_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/baoji_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始爆机"
                    android:background="@drawable/btn_purple"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shape_notice"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="提示"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="12sp"
                    android:text="1、注册添添人脉的手机号与微信绑定的手机号一致，被动加粉才有效。"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="12sp"
                    android:text="2、请到微信设置—我—设置—隐私—手机号打开，加我为朋友时需验证打开。"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="12sp"
                    android:text="3、每天坚持使用一键加粉和地区加粉，会被系统推荐为优质用户，开启爆机后，被加更多。"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>
