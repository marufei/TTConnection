<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ttrm.ttconnection.activity.RegisterActivity">
    <include layout="@layout/toolbar_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击获取验证码"
        android:textSize="25sp"
        android:textColor="@color/gray_3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/register_tv_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_3"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/register_tv_regcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:text="获取验证码"
            android:textColor="@color/colorPrimaryDark"
            android:background="@null"/>
    </LinearLayout>
    <EditText
        android:id="@+id/register_et_smscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:hint="输入短信验证码"
        android:inputType="number"
        android:lines="1"
        android:textColorHint="@color/gray_9"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_b2" />
    <EditText
        android:id="@+id/register_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:hint="设置密码（至少6位字母或数字）"
        android:inputType="textPassword"
        android:lines="1"
        android:textColorHint="@color/gray_9"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_b2" />
    <Button
        android:id="@+id/register_btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_purple"
        android:text="提交"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示已阅读并同意"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/register_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="《添添人脉用户服务协议及隐私政策》"
            android:textColor="@color/btn_right"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
