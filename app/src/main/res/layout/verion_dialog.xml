<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:gravity="center"
    android:textColor="@color/gray_3"
    android:textSize="18sp"
    android:text="版本更新提示"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_dividler"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="版本名称："/>
        <TextView
            android:id="@+id/version_update_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="版本更新时间："/>
        <TextView
            android:id="@+id/version_update_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/version_update_content"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="版本更新内容："
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有新版本哦，请下载~"
        android:gravity="center"
        android:textColor="@color/gray_6"
        android:textSize="13sp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/version_update_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/gray_3"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/layout_border"
            android:text="取消"/>
        <TextView
            android:id="@+id/version_update_yes"
            android:text="更新"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray_3"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/layout_border"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
