<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ttrm.ttconnection.activity.SignActivity">
    <include layout="@layout/toolbar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@mipmap/sign_bac"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_3"
                        android:text="我的钻石"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/vector_drawable_zuanshi"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_3"
                        android:text="今日："/>
                    <TextView
                        android:id="@+id/sign_tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_3"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_zs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="--"
                    android:textColor="@color/gray_3"
                    android:gravity="center"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的邀请码："

                            android:textColor="@color/gray_3"/>
                        <TextView
                            android:id="@+id/sign_tv_regcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="18sp"
                            android:textColor="@color/red_left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="好友通过你的邀请码注册，你和好友各+"
                            android:textSize="10sp"
                            android:id="@+id/textView3" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="--"
                            android:textSize="10sp"
                            android:id="@+id/textView5" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="颗钻石"
                            android:textSize="10sp"
                            android:id="@+id/textView4" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:elevation="5dp"
                    android:text="签到+10"
                    android:padding="10dp"
                    android:background="@drawable/btn_red"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_ticket"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="淘宝天猫大额优惠券"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="+20"
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每天有两次奖励机会，每次奖励20颗钻石"
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_tb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进去逛逛"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_one"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="一键加粉"/>
                        <TextView
                            android:id="@+id/sign_oneadd1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sign_oneadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_oneadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即使用"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_location"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="地区加粉"/>
                        <TextView
                            android:id="@+id/sign_location1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sign_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即使用"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:id="@+id/sign_tv_locationadd" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_wx"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="分享到微信好友"/>
                        <TextView
                            android:id="@+id/sign_wx1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sign_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即分享"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_cricle"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="分享到朋友圈"/>
                        <TextView
                            android:id="@+id/sign_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sign_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即分享"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_qq"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="分享到QQ好友"/>
                        <TextView
                            android:id="@+id/sign_qq1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sign_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即分享"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sign_qzone"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_3"
                            android:text="分享到QQ空间"/>
                        <TextView
                            android:id="@+id/sign_qqzone1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textColor="@color/yellow_ff"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/vector_drawable_zuanshi"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sign_qqzone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每天有一次奖励机会，每次奖励10颗钻石"
                        android:textColor="@color/gray_6"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign_tv_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即分享"
                    android:elevation="5dp"
                    android:background="@drawable/btn_pink"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_b2"/>
            <LinearLayout
                android:id="@+id/sign_ll_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/vector_drawable_zuanshi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="钻石规则"
                    android:textColor="@color/gray_3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.钻石是干嘛的？"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="钻石是添添人脉的虚拟积分，用于兑换爆机的。"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.如何获取钻石？"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="钻石不支持购买，可以通过每日任务获得，也可以通过开通被动加粉赠送。"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_3"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
